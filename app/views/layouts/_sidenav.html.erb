<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
    }
    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>

<body>
<div id="mySidenav" class="sidenav">

  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <% if !logged_in? %>
    <%= link_to 'Register now!', register_path %>
    <hr>
    <p class="alertnonono">Links Available Only For Registered Users</p>
    <hr>
    <p>Projects</p>
    <a  class="nonono">New Project</a>
    <a  class="nonono">My Projects</a>
    <a  class="nonono">Projects Funded</a>
    <a  class="nonono">Favourite Projects</a>
  <%else %>
    <p>Projects</p>
    <%= link_to 'New Project' %>
    <%= link_to 'My Projects' %>
    <%= link_to 'Projects Funded' %>
    <%= link_to 'Favourite Projects' %>
  <%end %>
</div>

<!-- Use any element to open the sidenav -->
<span onclick="openNav()"><img src="Arrow.png" alt="open_sidebar"></span>
