<% provide(:title, "New Project") %>

<h1>Fund <%= @project.name %></h1>

    <%= form_for( :fund, controller: 'projects', action: 'create_fund') do |f| %>
  <div class="col-md-2 col-md-offset-3">
      <%= f.label(:amount,"Amount to fund: ") %>
  </div>
  <div class="row">
    <div class="col-md-1">
      <%= f.number_field :amount %>

      <%= f.submit "Fund", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>