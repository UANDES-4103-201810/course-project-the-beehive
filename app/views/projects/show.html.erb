<h1>
  <%= @project.name %>
</h1>

<h2>
  <%= link_to @user.name, @user%>
</h2>

<h3>
  <strong>Description:</strong>
  <%= @project.description %>
</h3>

<progress max=<%= @project.goal %> value=<%= @project.actual %>> <%= @project.actual*100/@project.goal %> %</progress>
<p>
  <strong>Actual:</strong>
  <%= @project.actual %>
  <strong>Goal:</strong>
  <%= @project.goal %>
</p>

<p>
  <strong>Date limit:</strong>
  <%= @project.date_limit %>
</p>

<p>
  <strong>Funders:</strong>
  <%= @project.funders %>
</p>

<% if logged_in? %>
  <% if @current_user.id == @user.id %>
    <%= link_to 'Edit Project' %>
    <%= link_to 'Add a new promise', new_project_promise_path(@user, @project) %>
  <% else %>
    <%= link_to 'Fund this Project!'%>
  <% end %>
<% end %>

<hr>

<h3> Promises: </h3>
<% if @promises != nil %>
  <% @promises.each do |promise| %>
    <h3>
      <%= promise.description %>
    </h3>
    <h5>
      Min. amount to buy:
      <%= promise.min %>
    </h5>
    <h5>
      Date of delivery (Aprox.):
      <%= promise.delivery_date %>
    </h5>
    <h5>
      Buyers:
      <%= promise.buyers %>
    </h5>
    <% if logged_in? %>
      <% if @current_user.id == @user.id %>
        <%= link_to 'Edit Promise', edit_promise_path %>
      <% else %>
        <%= link_to 'Buy this promise!' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
</aside>
