<% provide(:title, 'Users') %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">


    </section>
    <h1> Users: </h1>
    <% @users.each do |user| %>
      <h4>
        <%= link_to user.name , user_path(user) %>
        <%= user.email %>
        <% if logged_in? %>
          <% if @current_user.user_type == 'admin' %>
            <p>
              <%= user.user_type %>
            </p>
            <p>
              <%= link_to 'Edit User' , edit_user_path(user) %>
            </p>
            <hr> </hr>
          <% end %>
        <% end %>
      </h4>

    <% end %>
  </aside>
</div>
<%= link_to 'Back', home_path %>
