<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <h2>
        <%= @user.description %>
      </h2>


      <% if logged_in? %>
        <% if @current_user.id == @user.id %>
          <%= link_to 'Edit your account', edit_user_path(@user) %>
          <%= link_to 'Create a new project', new_user_project_path(@user) %>
        <% end %>
      <% else %>
        <%= link_to 'Follow' %>
      <% end %>

    </section>
    <h2> Projects: </h2>
    <% @projects.each do |project| %>
    <h3>
      <%= project.name %>
    </h3>
      <h4>
        <%= project.description %>
      </h4>
    <% end %>
  </aside>
</div>
<%= link_to 'Back', home_path %>
