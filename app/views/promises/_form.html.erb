<% provide(:title, "New Promise") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if logged_in? %>
      <%= form_for(:promise, url: new_project_promise_path(@project)) do |form| %>

          <%= form.label :description %>
          <%= form.text_field :description %>

          <%= form.label :min, "Min Amount" %>
          <%= form.number_field :min %>

          <%= form.label :delivery_date %>
          <%= form.date_select :delivery_date %>

          <%= form.hidden_field :project_id, value: @project.id %>
          <%= form.hidden_field :buyers, value: 0 %>

        <%= form.submit "Create", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>
